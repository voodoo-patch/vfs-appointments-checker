{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "TelegramSettings": {
    "BotToken": "[REPLACE_WITH_YOUR_BOT_TOKEN]"
  },
  "AppointmentCheckerSettings": {
    "ApiBaseLocation": "http://localhost:5000/",
    "Check": {
      "Method": "POST",
      "Path": "trigger"
    },
    "Pause": {
      "Method": "POST",
      "Path": "stop"
    },
    "Resume": {
      "Method": "POST",
      "Path": "start"
    }
  }
}